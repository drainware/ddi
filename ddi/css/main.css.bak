*{ margin: 0; padding: 0; }*
body { background: #fff; font: 74% Arial, Helvetica, Sans-Serif; color: #454545; line-height: 1.6em; }
.blockingPageBody { background: #fff; font: 74% Arial, Helvetica, Sans-Serif; color: #454545; line-height: 1.6em; background-image:url(http://demo.drainware.com/public/images/drainwareBackground.png);}

a { text-decoration: none; color: #C40000; background: inherit; }
a:hover { color: #808080; background: inherit; }	
a:focus { outline: 0; }




h1 { font-size: 2.8em; line-height: 35px; }
h2 { color: #000; font: bold 170% Arial, Sans-Serif; letter-spacing: -1px; padding: 0; margin: 0 0 10px; }
img { border: 0; }

.grey { color: #484848; }

#wrap { width: 900px; margin: 10px auto 0; }

#logo { float: left; width: 400px; margin: 0 0 7px; }
#header_top {  width:100%; border-right: 2px solid #fff; color: #454545; display:inline-block; padding: 10px 0 0 7px; clear: both; margin: 0 0 0px 0; }
#header_top p { padding: 0; margin: 0; }

#header_top ul { float: right; padding: 12px 10px 0 0; margin: 0 0 5px 0; }			
#header_top ul li { list-style-type: none; display: inline;  font-weight: bold; }
#header_top ul li a { padding-left: 7px; background: #FFF url(../images/bullet.gif) no-repeat center left; margin-right: 5px; color: #C40000; }
#header_top ul li a:hover { padding-left: 7px; background: #FFF url(../images/bullet.gif) no-repeat center left; margin-right: 5px; color: #808080; }

#header_bottom { background: #EAECEE; color: #333; padding: 20px 20px 20px 10px;  font: 100% "Lucida Grande", "Lucida Sans Unicode", "Trebuchet MS", sans-serif;clear: both; border-left: 2px solid #fff; border-right: 2px solid #fff; margin: 0 0 1px 0;  }
#header_bottom div { background: #F3F5F7; color: #333; font: 75% "Lucida Grande", "Lucida Sans Unicode", "Trebuchet MS", sans-serif;padding: 0; clear: both; border: 10px solid rgb(234, 236, 238);  }
#header_bottom h2 { color: #A80A0B; width: 250px; margin: 0 0 10px;  }
#header_bottom a { text-decoration: none; color: #A80A0B; background: inherit; }
#header_bottom  ul { padding: 10px 10px 0 0; margin: 0 0 5px 20px; }
#slogan { clear: left; border-top: 1px solid #eee; margin: 0; padding: 5px 0 0 0; }

#maincontent { padding: 20px 0; clear: both; background: url(../images/bg.gif) repeat-x; }

#left { float: left; width: 630px; padding: 5px 15px 0 5px; margin: 0 0 25px 0; }
#left p { margin: 0 0 15px; }

#right { width: 220px; float: right; }
#info {font: 150% "Lucida Grande", "Lucida Sans Unicode", "Trebuchet MS", sans-serif;background: #a80a0b; padding: 15px 10px; color: #fff; text-align: left; font-weight: normal;}
#info h1 { font-size: 3em; }
#searchform { background: url(../images/searchform.gif) no-repeat; padding: 8px 4px 10px 4px; height: 27px; font: bold 0.9em Arial, Sans-Serif; margin: 0 0 20px; }
#searchform p { padding: 0; margin: 0; }
input.search { width: 127px; border: none; background: url(../images/input.gif) no-repeat; padding: 7px; margin: 0 4px 0 5px; }
input.submit { width: 53px; height: 29px; border: none; background: #FFF url(../images/submit.gif) no-repeat; font: bold 1.2em Arial, Sans-Serif; padding: 0px; color: #FFF; }

/*#footer { clear: both; padding: 10px;  margin: 10px 0 0 0; border-top: 1px solid #ccc; line-height: 2em; }*/
#footer { background: #FFFFFF; color: #FFFFFF; }

#mbox{background-color:#eee; padding:8px; border:2px outset #666;}
#mbm{font-family:sans-serif;font-weight:bold;float:right;padding-bottom:5px;}
#ol{background-image: url(../images/overlay.png);}
.dialog {display:none}

a.external {text-decoration: underline;color: #ffffff; font-size: 23pt; font-weight: bold; }
a.external:link {text-decoration: underline;color: #0000ff; font-size: 32pt; font-weight: bold; }
a.external:visited {color: #FFFFFF; font-weight: bold; }
a.external:hover { background-color: #FFFFFF; color: #A80A0B; cursor: pointer; }
a.external:active {color: #FFFFFF; }

* html #ol{background-image:none; filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src="../images/overlay.png", sizingMethod="scale");}


/************************ Network Assistant ***********************/


.assistant-wrapper {
background: #EAECEE;
margin-right:2px;
margin-left:2px;
}
.assistant-wrapper .step {
padding: 15px;
}

.assistant-wrapper .step .step-title {
font-size: 28px;
color: #A80A0B;
margin-bottom: 15px;
background: #CCC;
padding: 10px;
font-weight:bold;
}
.assistant-wrapper .step .step-body {
font-size:16px;
line-height:24px;
padding:20px;
margin-left: 75px;
margin-right: 75px;
}

.assistant-wrapper .step .step-body .step-form {
margin:20px;
width:554px;
text-align:right;
}

.assistant-wrapper button {
font-size:18px;
margin-right:8px;
}

#stepb,#stepc,#end {
display:none;
}

.assistant-wrapper.first #stepa{
display:none;
} 

